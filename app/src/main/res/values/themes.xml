    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- This makes the corners circular -->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>

    <style name="dialog_style" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppBottomSheetDialogThemeNew" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyleNew</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyleNew" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/favourites_bottom_shape</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ractangle">
        <item name="cornerSize">5%</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/main_blue</item>
    </style>

    <style name="progress_color">
        <item name="colorAccent">@color/main_blue</item> <!-- Whatever color you want-->
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">20dp</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/grey_light</item>
        <item name="colorAccent">@color/main_blue</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
